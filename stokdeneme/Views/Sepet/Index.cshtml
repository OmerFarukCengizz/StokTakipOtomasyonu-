@using stokdeneme.Models.Entities
@model List<Sepet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}


<style>
    .h-custom {
        height: 100vh !important;
    }
    .a{
        margin-left:-25px;
    }
</style>
<body>
    <section class="h-100 h-custom">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col" class="h5">Sepetim</th>
                                    
                                    <th scope="col">Kategori-Marka</th>
                                    <th scope="col">Adet</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col"> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model) {
                                <tr>
                                    <th scope="row">
                                        <div class="d-flex align-items-center">
                                            <img src="@item.Urunler.Resim" class="img-fluid rounded-3"
                                                 style="width: 120px; height:100px; object-fit:contain;" alt="@item.Urunler.Urun_Ad">
                                            <div class="flex-column ms-1" style="margin-right:-30px;">
                                                <p class="mb-2">@item.Urunler.Urun_Ad</p>
                                            </div>
                                        </div>
                                    </th>
                                 
                                    <td class="align-middle">
                                        <p class="mb-0" style="font-weight: 400;">@item.Urunler.kategoriler.Kategori_ad-@item.Urunler.Markalar.Marka_Isim</p>
                                    </td>
                                    <td class="align-middle">
                                        <div class="d-flex flex-row">
                                            @Html.ActionLink("-", "Azalt", new { id = item.Sepet_ID }, new { @class = "btn btn-info a" })

                                            <input min="0" name="quantity" value="@item.Urun_Miktar" type="number"
                                                   class="form-control form-control-sm" style="width: 50px;" />

                                            @Html.ActionLink("+", "Arttir", new { id = item.Sepet_ID }, new { @class = "btn btn-info" })

                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <p class="mb-0" style="font-weight: 400;">@item.Toplam_fiyat</p>
                                    </td>
                                    <td class="align-middle">
                                        @Html.ActionLink(" ", "Sil", new { id = item.Sepet_ID }, new { @class = "btn btn-danger fa-solid fa-trash" })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="card shadow-2-strong mt-5" style="border-radius: 16px;">
                        <div class="card-body p-2">

                            <div class="row">
                                <div class="col-md-6 col-lg-4 col-xl-3 mb-4 mb-md-0">
                                    <form>
                                        <div class="d-flex flex-row pb-3">
                                            <div class="d-flex align-items-center pe-2">
                                                <input class="form-check-input" type="radio" name="radioNoLabel" id="radioNoLabel1v"
                                                       value="" aria-label="..." checked />
                                            </div>
                                            <div class="rounded border w-100 p-3">
                                                <p class="d-flex align-items-center mb-0">
                                                    <i class="fab fa-cc-mastercard fa-2x text-dark pe-2"></i>Kredi
                                                    Kartı
                                                </p>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row pb-3">
                                            <div class="d-flex align-items-center pe-2">
                                                <input class="form-check-input" type="radio" name="radioNoLabel" id="radioNoLabel2v"
                                                       value="" aria-label="..." />
                                            </div>
                                            <div class="rounded border w-100 p-3">
                                                <p class="d-flex align-items-center mb-0">
                                                    <i class="fab fa-cc-visa fa-2x fa-lg text-dark pe-2"></i>Banka Kartı
                                                </p>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-6 col-lg-4 col-xl-6">
                                    <div class="row">
                                        <div class="col-12 col-xl-6">
                                            <div class="form-outline mb-4 mb-xl-3">
                                                <input type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                                       placeholder="Ahmet Yılmaz" />
                                                <label class="form-label" for="typeName"> Kart üstündeki isim</label>
                                            </div>

                                            <div class="form-outline mb-4 mb-xl-3">
                                                <input type="text" id="typeExp" class="form-control form-control-lg" placeholder="MM/YY"
                                                       size="7" minlength="7" maxlength="7" />
                                                <label class="form-label" for="typeExp"> Kart Bitiş Süresi</label>
                                            </div>
                                        </div>
                                        <div class="col-12 col-xl-6">
                                            <div class="form-outline mb-4 mb-xl-3">
                                                <input type="text" id="typeText" class="form-control form-control-lg" siez="17"
                                                       placeholder="1111 2222 3333 4444" minlength="19" maxlength="19" />
                                                <label class="form-label" for="typeText"> Kart Numarası</label>
                                            </div>

                                            <div class="form-outline mb-4 mb-xl-3">
                                                <input type="password" id="typeText" class="form-control form-control-lg"
                                                       placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" />
                                                <label class="form-label" for="typeText"> Cvv</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-xl-3">
                                    <div class="d-flex justify-content-between" style="font-weight: 500;">
                                        <p class="mb-2">Ücret</p>
                                        <p class="mb-2"> @ViewBag.Tutar</p>
                                    </div>
                                    <div class="d-flex justify-content-between" style="font-weight: 500;">
                                        <p class="mb-0">Kargo</p>
                                        <p class="mb-0">0 TL</p>
                                    </div>

                                    <hr class="my-4">

                                    <div class="d-flex justify-content-between mb-4" style="font-weight: 500;">
                                        <p class="mb-0">Toplam Ücret</p>
                                        <p class="mb-0">@ViewBag.Tutar</p>
                                    </div>

                                    <a href="/Detay/Hepsinial" class="btn btn-primary btn-block btn-lg">
                                        <div class="d-flex justify-content-between">
                                            <span>Ödeme</span>
                                            <span style="margin-left:10px;">@ViewBag.Tutar</span>
                                        </div>
                                    </a>

                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</body>
