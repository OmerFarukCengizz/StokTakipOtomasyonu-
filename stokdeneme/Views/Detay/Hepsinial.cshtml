@using stokdeneme.Models.Entities
@model List<Sepet>
@{
    ViewBag.Title = "Hepsinial";
    Layout = "~/Views/Shared/MainLayout.cshtml";


}
<style>
    .h-custom {
        height: 100vh !important;
    }

    .a {
        margin-left: -25px;
    }
</style>
<div class="container py-5">
    <h5>Merhaba,<span style="color:red;">@User.Identity.Name </span>Satın Alma Sayfasına Hoşgeldin </h5>
</div>
@using (Html.BeginForm("Hepsinial2", "Detay", FormMethod.Post, new { @class = "container" }))
{
    <section class="h-0 py-5">
        <div class="container ">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col">

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Birim Fiyatı</th>
                                    <th scope="col">Adedi</th>
                                    <th scope="col">Toplam Fiyatı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td scope="row">
                                            <div class="d-flex align-items-center">

                                                <div class="flex-column ms-1" style="margin-right:-30px;">
                                                    <p class="mb-2">@item.Urunler.Urun_Ad</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <p class="mb-0" style="font-weight: 400;">@item.KDVsiz_fiyat</p>
                                        </td>
                                        <td class="align-middle">
                                            <p class="mb-0" style="font-weight: 400;">@item.Urun_Miktar</p>
                                        </td>
                                        <td class="align-middle">
                                            <p class="mb-0" style="font-weight: 400;">@item.Toplam_fiyat</p>
                                        </td>
                                    </tr>
                                }
                        </table>
                        <div style="color:red;font-size:22px;text-align:center;">  Toplam Tutarınız @ViewBag.Tutar</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container">
        <div class="form-group">
            <button class="btn btn-success w-25" style="float:left;">Onay</button>
        </div>
        <div class="form-group">
            <a href="/Sepet/Index" class="btn btn-dark w-25" style="float:right;">İptal</a>
        </div>
    </div>
}


