@using stokdeneme.Models.Entities

@model List<Firmalar>
@{
    ViewBag.Title = "Siparis";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <style>
        .doz {
            display: flex;
        }
        .asd {
            margin-top: 30px;
            text-align: center;
        }
        
    </style>

<body>

    <h2 style="text-align:center; color:red; margin-top:20px;">Lütfen Bir Firma Seçiniz</h2>
    <div class="doz">
        <table class="table table-hover asd">
            <tr>
                <th >Firma Adı</th>
                <th >Ürün Bilgisi</th>
            </tr>
            <tbody>
                @foreach (var frm in Model)
                {
                    <tr>
                        <td>@frm.Firma_Ad</td>
                        <td><a href="/İşlemler/SiparisBilgi/@frm.Firma_ID" class="btn btn-warning w-50">Ürünler</a> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>


